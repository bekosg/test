{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "BekosG-df"
		},
		"ECDC_SQL08_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'ECDC_SQL08'"
		},
		"srm365dev_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'srm365dev'"
		},
		"ECDCFAT_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://srminternal.europa.local/ECDCFAT"
		},
		"srm365dev_properties_typeProperties_username": {
			"type": "string",
			"defaultValue": "GiorgosA@ecdc365.onmicrosoft.com"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "BekosG-df_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"srm365dev_password": {
						"value": "[parameters('srm365dev_password')]"
					},
					"srm365dev_properties_typeProperties_username": {
						"value": "[parameters('srm365dev_properties_typeProperties_username')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "BekosG-df_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ECDC_SQL08_connectionString": {
						"value": "[parameters('ECDC_SQL08_connectionString')]"
					},
					"ECDCFAT_properties_typeProperties_url": {
						"value": "[parameters('ECDCFAT_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'BekosG-df_ArmTemplate_0')]"
			]
		},
		{
			"name": "BekosG-df_ArmTemplate_2",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_2.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'BekosG-df_ArmTemplate_1')]"
			]
		}
	]
}